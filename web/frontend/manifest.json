{
  "manifest_version": 3,
  "name": "Sentiment Highlighter",
  "version": "3.0",
  "description": "Highlight comments by sentiment using a backend model.",
  "icons": {
    "16": "assets/icon128.png",
    "48": "assets/icon128.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "html/index.html",
    "default_icon": {
      "16": "assets/icon128.png",
      "48": "assets/icon128.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "http://localhost:3000/",
    "<all_urls>"
  ]
}
